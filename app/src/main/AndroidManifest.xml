<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="northeastern.is4300.pettasktracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UsersActivity"
            android:label="@string/title_activity_users" />
        <activity
            android:name=".PetsActivity"
            android:label="@string/title_activity_pets" />
        <activity
            android:name=".ViewUserActivity"
            android:label="@string/title_activity_view_user"
            android:parentActivityName=".UsersActivity" />
        <activity
            android:name=".ViewPetActivity"
            android:label="@string/title_activity_view_pet"
            android:parentActivityName=".PetsActivity" />
        <activity
            android:name=".AddPetActivity"
            android:label="@string/title_activity_add_pet"
            android:parentActivityName=".PetsActivity" />
        <activity
            android:name=".AddTaskActivity"
            android:label="@string/title_activity_add_task"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>